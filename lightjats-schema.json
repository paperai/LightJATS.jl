{
    "title": "LightJATS json-schema",
    "type": "object",
    "properties": {
        "journalTitle": { "type": "string" },
        "year": { "type": "integer" },
        "articleTitle": { "type": "string" },
        "authors": {
            "type": "array",
            "items": { "type": "string" }
        },
        "body": { "type": "string" },
        "tables": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "img": { "type": "string" },
                    "label": { "type": "string" },
                    "caption": { "type": "string" }
                },
                "required": ["img", "label", "caption"]
            }
        },
        "figs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "img": { "type": "string" },
                    "label": { "type": "string" },
                    "caption": { "type": "string" }
                },
                "required": ["img", "label", "caption"]
            }
        }
    },
    "required": ["journalTitle", "year", "articleTitle", "authors", "body", "tables", "figs"]
}
